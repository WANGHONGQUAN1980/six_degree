<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/for_who"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/person"
            android:hint="输入昵称搜索"
            android:maxLines="1"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_list"
            app:layout_constraintBottom_toBottomOf="@id/for_who"
            app:layout_constraintLeft_toRightOf="@id/for_who"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/for_who" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/tongxue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同学" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/tongshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同事" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/qinshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲属" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/pengyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/locateat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/max_degree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="6"
            android:min="1"
            android:progress="3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_my_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="TODO"
            android:drawableLeft="@drawable/search"
            android:text="3度搜索" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>