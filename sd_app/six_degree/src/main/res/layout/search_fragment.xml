<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_relations_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/first"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/add_relations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/add"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/add_relations_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_relations_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:text="添加关系"
            app:layout_constraintLeft_toRightOf="@id/add_relations"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/add_relations" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/first"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="32dp"
        android:background="@color/md_blue_100"
        app:layout_constraintBottom_toTopOf="@id/link_two_person_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_relations_container"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/link_two_person_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/second"
        app:layout_constraintTop_toBottomOf="@id/first">

        <ImageView
            android:id="@+id/link_two_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_blue_24"
            app:layout_constraintHorizontal_chainStyle="packed"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/link_two_person_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/link_two_person_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:text="两人关系"
            app:layout_constraintLeft_toRightOf="@id/link_two_person"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/link_two_person" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View

        android:id="@+id/second"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="32dp"
        android:background="@color/md_blue_100"
        app:layout_constraintBottom_toTopOf="@+id/show_one_person_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/link_two_person_container"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/show_one_person_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/third"
        app:layout_constraintTop_toBottomOf="@id/second">

        <ImageView
            android:id="@+id/view_my_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flare"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/show_one_person_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/show_one_person_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:text="六度关系"
            app:layout_constraintLeft_toRightOf="@id/view_my_net"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/third"
        android:layout_width="0dp"

        android:layout_height="1dp"
        android:layout_marginBottom="32dp"
        android:background="@color/md_blue_100"
        app:layout_constraintBottom_toTopOf="@+id/zupu_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_one_person_container"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/zupu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/forth"
        app:layout_constraintTop_toBottomOf="@id/third">

        <ImageView
            android:id="@+id/zupu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hierachies"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/zupu_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/zupu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:text="亲人族谱"
            app:layout_constraintLeft_toRightOf="@id/zupu"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/zupu" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/forth"
        android:layout_width="0dp"

        android:layout_height="1dp"
        android:layout_marginBottom="32dp"
        android:background="@color/md_blue_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zupu_container"
        app:layout_constraintBottom_toTopOf="@id/fav_container"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@id/forth">

        <ImageView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favourite"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/fav_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fav_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:text="我的收藏"
            app:layout_constraintLeft_toRightOf="@id/fav"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/fav" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="32dp"
        android:background="@color/md_blue_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fav_container"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>

